<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/user_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reg_type_tab"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_person_black_24dp"
                app:civ_border_color="@color/white"
                app:civ_border_width="@dimen/_2sdp"
                android:id="@+id/profile_image"
                android:layout_margin="@dimen/_10sdp"/>

            <TextView
                android:id="@+id/user_name_lbl"
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text="@string/name"
                android:textColor="@color/sidemenu"
                android:textSize="@dimen/_13sdp" />

            <EditText
                android:id="@+id/name_input"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="13sp"
                android:textColor="@color/sidemenu"
                android:background="@drawable/input_txt_bg"
                android:padding="@dimen/_5sdp" />
            <TextView
                android:id="@+id/user_login_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text="@string/phone_number"
                android:textColor="@color/sidemenu"
                android:textSize="@dimen/_13sdp" />

            <EditText
                android:id="@+id/phone_input"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:inputType="number"
                android:textSize="13sp"
                android:singleLine="true"
                android:textColor="@color/sidemenu"
                android:background="@drawable/input_txt_bg"
                android:padding="@dimen/_5sdp" />
            <TextView
                android:id="@+id/email_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text="@string/email"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_13sdp" />

            <EditText
                android:id="@+id/email_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textColor="@color/sidemenu"
                android:background="@drawable/input_txt_bg"
                android:padding="@dimen/_5sdp" />


            <TextView
                android:id="@+id/address_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/address"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_13sdp" />

            <EditText
                android:id="@+id/address_input"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:inputType="textMultiLine"
                android:singleLine="true"
                android:textColor="@color/sidemenu"
                android:background="@drawable/input_txt_bg"
                android:padding="@dimen/_5sdp" />

            <TextView
                android:id="@+id/agelbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/age"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_13sdp" />

            <EditText
                android:id="@+id/age_in"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/sidemenu"
                android:background="@drawable/input_txt_bg"
                android:padding="@dimen/_5sdp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/gender"
                android:padding="@dimen/_5sdp">

                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ذكر" />

                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="أنثى" />

            </RadioGroup>


            <LinearLayout
                android:id="@+id/buttons_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/saveBtn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/button_bg"
                    android:text="@string/save"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13sdp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</ScrollView>