<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".Activites.LoginActivity">

    <ScrollView
        android:id="@+id/user_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reg_type_tab"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_person_black_24dp"
                app:civ_border_color="@color/white"
                app:civ_border_width="@dimen/_2sdp"
                android:id="@+id/avater"
                android:layout_margin="@dimen/_10sdp"/>

            <TextView
                android:id="@+id/user_name_lbl"
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text="@string/name"
                android:textColor="@color/sidemenu"
                android:textSize="@dimen/_13sdp" />

            <EditText
                android:id="@+id/name_input"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="13sp"
                android:textColor="@color/sidemenu"
                android:background="@drawable/input_txt_bg"
                android:padding="@dimen/_5sdp" />
            <TextView
                android:id="@+id/user_login_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text="@string/phone_number"
                android:textColor="@color/sidemenu"
                android:textSize="@dimen/_13sdp" />

            <EditText
                android:id="@+id/phone_input"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:inputType="number"
                android:textSize="13sp"
                android:singleLine="true"
                android:textColor="@color/sidemenu"
                android:background="@drawable/input_txt_bg"
                android:padding="@dimen/_5sdp" />
            <TextView
                android:id="@+id/email_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text="@string/email"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_13sdp" />

            <EditText
                android:id="@+id/email_input"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textColor="@color/sidemenu"
                android:background="@drawable/input_txt_bg"
                android:padding="@dimen/_5sdp" />


            <TextView
                android:id="@+id/password_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/password"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_13sdp" />

            <EditText
                android:id="@+id/password_input"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:inputType="textPassword"
                android:singleLine="true"
                android:password="true"
                android:textColor="@color/sidemenu"
                android:background="@drawable/input_txt_bg"
                android:padding="@dimen/_5sdp" />
            <TextView
                android:id="@+id/re_password_lbl"
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text="@string/re_password"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_13sdp" />

            <EditText
                android:id="@+id/re_password_input"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:inputType="textPassword"
                android:singleLine="true"
                android:password="true"
                android:textColor="@color/sidemenu"
                android:background="@drawable/input_txt_bg"
                android:padding="@dimen/_5sdp" />

            <TextView
                android:id="@+id/address_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/address"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_13sdp" />

            <EditText
                android:id="@+id/address_input"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:inputType="textMultiLine"
                android:singleLine="true"
                android:textColor="@color/sidemenu"
                android:background="@drawable/input_txt_bg"
                android:padding="@dimen/_5sdp" />

            <TextView
                android:id="@+id/agelbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/age"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_13sdp" />

            <EditText
                android:id="@+id/age_in"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/sidemenu"
                android:background="@drawable/input_txt_bg"
                android:padding="@dimen/_5sdp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/gender"
                android:padding="@dimen/_5sdp">

                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ذكر" />

                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="أنثى" />

            </RadioGroup>


            <LinearLayout
                android:id="@+id/buttons_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:orientation="vertical">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/polices_check"
                    android:layout_gravity="right"
                    android:gravity="center_vertical"
                    android:layoutDirection="rtl"
                    android:text="@string/approve_the_terms_and_conditions"
                    android:layout_marginBottom="@dimen/_10sdp"/>
                <Button
                    android:id="@+id/register_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/button_bg"
                    android:text="@string/register"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13sdp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.TabLayout
        android:id="@+id/reg_type_tab"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="35dp"
        android:layout_below="@id/login_lbl"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@android:color/transparent"
        app:tabBackground="@drawable/tab_background"
        app:tabIndicatorHeight="0dp"
        app:tabMinWidth="0dp"
        app:tabRippleColor="@null"
        app:tabSelectedTextColor="@color/white"
        app:tabTextColor="@color/lightblue">

    </android.support.design.widget.TabLayout>


</RelativeLayout>