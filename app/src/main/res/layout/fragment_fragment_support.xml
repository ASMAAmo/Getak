    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_centerHorizontal="true"
        android:text="@string/support"
        android:layout_below="@+id/profile_image"
        android:textColor="@android:color/black"
        android:layout_marginLeft="@dimen/_10sdp"
        android:textSize="@dimen/_15sdp" />
    <TextView
        android:id="@+id/user_login_lbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txt_name"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:text="@string/phone_number"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_15sdp" />

    <EditText
        android:id="@+id/user_name_input"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_below="@+id/user_login_lbl"
        android:background="@drawable/input_txt_bg"
        android:hint="+96XXXXXXXXXXXXX"
        android:layout_marginLeft="@dimen/_10sdp"
        android:padding="@dimen/_5sdp" />
    <TextView
        android:id="@+id/txt_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_below="@+id/user_name_input"
        android:layout_marginBottom="@dimen/_10sdp"
        android:text="@string/email"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_15sdp" />

    <EditText
        android:id="@+id/email_input"
        android:layout_width="match_parent"
        android:inputType="textEmailAddress"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_below="@+id/txt_mail"
        android:background="@drawable/input_txt_bg"
        android:padding="@dimen/_5sdp" />
    <TextView
        android:id="@+id/txt_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_below="@+id/email_input"
        android:layout_marginBottom="@dimen/_10sdp"
        android:text="@string/subject"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_15sdp" />

    <EditText
        android:id="@+id/subject_input"
        android:layout_width="match_parent"
        android:inputType="textEmailAddress"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_below="@+id/txt_subject"
        android:background="@drawable/input_txt_bg"
        android:padding="@dimen/_5sdp" />
    <TextView
        android:id="@+id/txt_messg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_below="@+id/subject_input"
        android:layout_marginBottom="@dimen/_10sdp"
        android:text="@string/messages"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_15sdp" />

    <EditText
        android:id="@+id/messg_input"
        android:layout_width="match_parent"
        android:inputType="textEmailAddress"
        android:layout_height="wrap_content"
        android:minHeight="100dp"

        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_below="@+id/txt_subject"
        android:background="@drawable/input_txt_bg"
        android:padding="@dimen/_5sdp" />
    <Button
        android:id="@+id/send_btn"
        android:layout_width="200dp"
        android:layout_height="@dimen/_35sdp"
        android:background="@drawable/button_bg"
        android:text="@string/send"
        android:layout_centerInParent="true"
        android:layout_below="@+id/messg_input"
        android:layout_marginTop="25dp"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp" />
</RelativeLayout>